<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chipfc.roborover.RoverLanding"
    tools:ignore="MergeRootFrame" >
    
    <RelativeLayout
	    android:id="@+id/body"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:padding="10dp">
	    <Button
	        android:id="@+id/btn_roverrun"
	        android:layout_width="@dimen/rover_landing_button_width"
	        android:layout_height="@dimen/rover_landing_button_height"
	        android:background="@android:color/white"/>
	    
	    <Button
	        android:id="@+id/btn_roverquiz"
	        android:layout_width="@dimen/rover_landing_button_width"
	        android:layout_height="@dimen/rover_landing_button_height"
	        android:background="@android:color/white"
	        android:layout_toRightOf="@+id/btn_roverrun"
	        android:layout_marginLeft="10dp"/>
	    
	    <Button
	        android:id="@+id/btn_roverwiki"
	        android:layout_width="@dimen/rover_landing_button_width"
	        android:layout_height="@dimen/rover_landing_button_height"
	        android:background="@android:color/white"
	        android:layout_below="@+id/btn_roverrun"
	        android:layout_marginTop="10dp"/>
	    
	    <Button
	        android:id="@+id/btn_roverabout"
	        android:layout_width="@dimen/rover_landing_button_width"
	        android:layout_height="@dimen/rover_landing_button_height"
	        android:background="@android:color/white"
	        android:layout_toRightOf="@+id/btn_roverwiki"
	        android:layout_below="@+id/btn_roverrun"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"/>
	</RelativeLayout>
</RelativeLayout>

